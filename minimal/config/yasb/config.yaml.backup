# This is default and very simple configuration file for Yasb. 
# For more information about configuration options, please visit the Wiki https://github.com/amnweb/yasb/wiki
watch_stylesheet: true
watch_config: true
debug: false
komorebi:
  start_command: "komorebic start --whkd"
  stop_command: "komorebic stop --whkd"
  reload_command: "komorebic stop --whkd && komorebic start --whkd"
bars:
  primary-bar:
    enabled: true
    screens: ["*"]
    class_name: "yasb-bar"
    alignment:
      position: "top"
      center: false
    blur_effect:
      enabled: false
      acrylic: false
      dark_mode: true
      round_corners: true
      border_color: None
    window_flags:
      always_on_top: false
      windows_app_bar: true
    dimensions:
      width: "100%"
      height: 26
    padding:
      top: 4
      left: 13
      bottom: 4
      right: 13
    widgets:
      left: [
        "komorebi_workspaces",
        #"active_window",
        "komorebi_active_layout",
        "cpu",
        "memory"
      ]
      center: [
        "clock",
        #"winwal"
      ]
      right: [
        "media",
        #"separator",
        "launchpad",
        "separator2",
        "wallpapers",
        "battery",
        "volume",
        "power_menu"
        ]
widgets:
  media:
    type: "yasb.media.MediaWidget"
    options:
      label: "\uf001 {title}"
      label_alt: "\uf001 {artist} â€¢ {title}"
      max_field_size:
        label: 30
        label_alt: 40
      show_thumbnail: false
      controls_only: false
      controls_hide: true
      controls_left: true
      hide_empty: true
      callbacks: 
        on_left: "toggle_media_menu"
        on_right: "toggle_label"
      thumbnail_alpha: 80
      thumbnail_padding: 24
      thumbnail_corner_radius: 0
      thumbnail_edge_fade: true
      icons:
        prev_track: "\ue892"
        next_track: "\ue893"
        play: "\ue768"
        pause: "\ue769"
      media_menu:
        blur: false
        round_corners: true
        round_corners_type: "normal"
        border_color: "system"
        alignment: "right"
        direction: "down"
        offset_top: 6
        offset_left: 0
        thumbnail_corner_radius: 8
        thumbnail_size: 120
        max_title_size: 80
        max_artist_size: 20
        show_source: true
      media_menu_icons:
        play: "\ue768"
        pause: "\ue769"
        prev_track: "\ue892"
        next_track: "\ue893"
  active_window:
    type: "yasb.active_window.ActiveWindowWidget"
    options:
      label: "{win[title]}"
      label_alt: "[class_name='{win[class_name]}' exe='{win[process][name]}' hwnd={win[hwnd]}]"
      label_no_window: ""
      label_icon: true
      label_icon_size: 14
      max_length: 20
      max_length_ellipsis: "..."
      monitor_exclusive: true
  clock:
    type: "yasb.clock.ClockWidget"
    options:
      label: "{%m.%d.%y | %I:%M %p}"
      label_alt: "{%a, %b %d, %Y | %I:%M %p}"
      timezones: []
      calendar: 
        blur: false
        round_corners: True
        round_corners_type: "normal"
        border_color: "System"
        alignment: "center"
        direction: "down"
      callbacks:
        on_left: "toggle_label"
        on_middle: "do_nothing"
        on_right: "toggle_calendar"
  komorebi_workspaces:
    type: "komorebi.workspaces.WorkspaceWidget"
    options:
      label_offline: "\u23fc Offline"
      label_workspace_btn: "{index}"
      label_workspace_active_btn: "{index}"
      label_workspace_populated_btn: "{index}"
      label_zero_index: false
      hide_empty_workspaces: true
      hide_if_offline: true
      animation: false
      container_padding:
        top: 0
        left: 0
        bottom: 0
        right: 0
  komorebi_active_layout:
    type: "komorebi.active_layout.ActiveLayoutWidget"
    options:
      hide_if_offline: true
      label: "{icon}"
      layouts:
        [
          "bsp",
          "columns",
          "rows",
          "grid",
          "vertical_stack",
          "horizontal_stack",
          "ultrawide_vertical_stack",
          "right_main_vertical_stack",
        ]
      layout_icons:
        bsp: "<span>\uebeb</span>"
        columns: "<span>\uebf7</span>"
        rows: "<span>\uec01</span>"
        grid: "<span>\uebef</span>"
        vertical_stack: "<span>\uebee</span>"
        horizontal_stack: "<span>\udb81\udefb</span>"
        ultrawide_vertical_stack: "<span>\uebf0</span>"
        right_main_vertical_stack: "<span>\uec02</span>"
        monocle: "<span>\udb83\udf4f</span>"
        maximised: "[||]"
        floating: "<span>\ueae3</span>"
        paused: "<span>\uf04c</span>"
      container_padding:
        top: 0
        left: 0
        bottom: 0
        right: 0
      callbacks:
        on_left: "next_layout"
        on_middle: "toggle_monocle"
        on_right: "prev_layout"
  volume:
    type: "yasb.volume.VolumeWidget"
    options:
      label: "<span>{icon}</span> {level}"
      label_alt: "{volume}"
      tooltip: false
      volume_icons:
        - "\ueee8"
        - "\uf026"
        - "\uf027"
        - "\uf027"
        - "\uf028"
      callbacks:
        on_left: "toggle_mute"
  power_menu:
    type: "yasb.power_menu.PowerMenuWidget"
    options:
      label: "\uf011"
      uptime: True
      blur: false
      blur_background: false
      animation_duration: 200
      button_row: 5
      buttons:
        shutdown: ["\uf011", "Shut Down"]
        restart: ["\uead2", "Restart"]
        signout: ["\udb80\udf43", "Sign out"]
        hibernate: ["\uf28e", "Hibernate"]
        sleep: ["\u23fe", "Sleep"]
        cancel: ["", "Cancel"]
  battery:
      type: "yasb.battery.BatteryWidget"
      options:
        label: "{icon} {percent}%"
        label_alt: "{icon} {percent}% | time: {time_remaining}"
        charging_options:
          icon_format: "{charging_icon}"
        status_thresholds:
          critical: 10
          low: 25
          medium: 75
          high: 95
          full: 100
        status_icons:
          icon_charging: "\udb80\udc84"
          icon_critical: "\udb80\udc7a"
          icon_low: "\udb80\udc7c"
          icon_medium: "\udb80\udc80"
          icon_high: "\udb80\udc82"
          icon_full: "\udb80\udc79"
  wallpapers:
    type: "yasb.wallpapers.WallpapersWidget"
    options:
      label: "<span>\uf03e</span>"
      image_path: "C:\\customizations\\wallpapers2"
      change_automatically: false 
      update_interval: 60 
      gallery:
        enabled: true 
        blur: true
        image_width: 350
        image_per_page: 5
        show_buttons: false
        orientation: "landscape"
        image_spacing: 20
        lazy_load: true
        lazy_load_delay: 80
        lazy_load_fadein: 400
        image_corner_radius: 2
        enable_cache: false
      #run_after:
        #- "yasbc toggle-widget wallpapers --follow-focus"
        #- "cmd.exe /c start /min pwsh C:\\Users\\ACER\\.config\\yasbwal.ps1"
  cpu:
    type: "yasb.cpu.CpuWidget"
    options:
      label: "<span>\uf4bc</span>{info[percent][total]}%"
      label_alt: "<span>\uf437</span>{info[histograms][cpu_percent]}"
      update_interval: 2000
      histogram_icons:
        - '\u2581' # 0%
        - '\u2581' # 10%
        - '\u2582' # 20%
        - '\u2583' # 30%
        - '\u2584' # 40%
        - '\u2585' # 50%
        - '\u2586' # 60%
        - '\u2587' # 70%
        - '\u2588' # 80%+
      histogram_num_columns: 8
      callbacks:
        on_right: "exec cmd /c Taskmgr"
      label_shadow:
        enabled: false
        color: "black"
        radius: 3
        offset: [ 1, 1 ]
  wifi:
    type: "yasb.wifi.WifiWidget"
    options:
      label: "<span>{wifi_icon}</span>"
      label_alt: "{wifi_name} {wifi_strength}%"
      update_interval: 5000
      callbacks:
        on_left: "exec cmd.exe /c start ms-settings:network"
        on_middle: "do_nothing"
        on_right: "toggle_label"
      ethernet_label: "<span>{wifi_icon}</span>"
      ethernet_label_alt: "<span>{wifi_icon}</span>{ip_addr}"
      ethernet_icon: "\ueba9"
      wifi_icons: [
        "\udb82\udd2e",  # Icon for 0% strength
        "\udb82\udd1f",  # Icon for 1-24% strength
        "\udb82\udd22",  # Icon for 25-49% strength
        "\udb82\udd25",  # Icon for 50-74% strength
        "\udb82\udd28"   # Icon for 75-100% strength
      ]
      label_shadow:
        enabled: false
        color: "black"
        radius: 3
        offset: [ 1, 1 ]     
  memory:
    type: "yasb.memory.MemoryWidget"
    options:
      label: "<span>\uefc5</span> {virtual_mem_free}"
      label_alt: "<span>\uefc5</span> VIRT: {virtual_mem_percent}% SWAP: {swap_mem_percent}%"
      update_interval: 5000
      callbacks:
        on_left: "toggle_label"
        on_middle: "do_nothing"
        on_right: "do_nothing"
      memory_thresholds:
        low: 25
        medium: 50
        high: 90
      label_shadow:
        enabled: false
        color: "black"
        radius: 1
        offset: [ 1, 1 ]    
  separator:
    type: "yasb.custom.CustomWidget"
    options:
      label: "|"
      label_alt: "|"
      class_name: "separator-widget"
      callbacks:
        on_left: "do_nothing" 
  launchpad:
    type: "yasb.launchpad.LaunchpadWidget"
    options:
      label: "\udb85\udcde"
      search_placeholder: "Search apps..."
      app_icon_size: 48
      window:
        fullscreen: False
        width: 1000
        height: 240
        overlay_block: true
      window_style:
        enable_blur: true
        round_corners: true
        round_corners_type: "normal"
        border_color: "system"
      window_animation:
        fade_in_duration: 200
        fade_out_duration: 200
      callbacks:
        on_left: "toggle_launchpad"
      app_title_shadow:
        enabled: false
        color: "#00000090"
        offset: [1, 1]
        radius: 2
      app_icon_shadow:
        enabled: false
        color: "#00000090"
        offset: [0, 2]
        radius: 8
  winwal:
    type: "yasb.custom.CustomWidget"
    options:
      label: "\ue22b"
      label_alt: "\ue22b"
      class_name: "winwal-widget"
      callbacks:
        on_left: "exec cmd.exe /c start /min pwsh C:\\Users\\ACER\\.config\\yasbwal.ps1"  
  separator2:
    type: "yasb.custom.CustomWidget"
    options:
      label: "/"
      label_alt: "/"
      class_name: "separator-widget"
      callbacks:
        on_left: "do_nothing"
